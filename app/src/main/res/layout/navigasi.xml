<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/button_close"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_close_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="46dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_close"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/user_name"
        style="@style/Body_2_Open_SemiBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="47dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/button_close"
        tools:text="Nama" />

    <TextView
        android:id="@+id/user_telepon"
        style="@style/Body_3_Open_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        tools:text="+6281234567890" />

    <TextView
        android:id="@+id/user_email"
        style="@style/Body_3_Open_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/user_telepon"
        tools:text="ivana@example.com" />

    <ImageView
        android:id="@+id/edit_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="38dp"
        android:src="@drawable/icon_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <Button
        android:id="@+id/beranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/background_button_list_navigasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:shadowRadius="@null"
        android:stateListAnimator="@null"
        android:text="Beranda"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@drawable/icon_home"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_email" />

    <Button
        android:id="@+id/rute_angkot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/background_button_list_navigasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:stateListAnimator="@null"
        android:text="Rute Angkot"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_pinpoint"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beranda" />

    <Button
        android:id="@+id/pengaturan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/background_button_list_navigasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:stateListAnimator="@null"
        android:text="Pengaturan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@drawable/icon_setting_gear"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rute_angkot" />

    <Button
        android:id="@+id/bantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/background_button_list_navigasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:stateListAnimator="@null"
        android:text="Bantuan"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@drawable/ic_headset"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pengaturan" />

    <Button
        android:id="@+id/keluar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/background_button_list_navigasi"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:stateListAnimator="@null"
        android:text="Keluar"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:backgroundTint="@null"
        app:icon="@drawable/icon_logout"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bantuan" />


</androidx.constraintlayout.widget.ConstraintLayout>